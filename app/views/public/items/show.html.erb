<div class="container">
  <div class="row">
    <div class="mx-auto col-lg-8">
      <h1></h1>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-4">
      <%= image_tag @item.image, size: "280x200" %>
    </div>

    <div class="col-lg-8">

      <div>
        <h4>
          <strong><%= @item.name %></strong>
        </h4>
      </div>

      <div>
        <h5><%= @item.introduction %></h5>
      </div>

      <div>
        <h6>￥<%= (@item.price_without_tax*1.1).floor.to_s(:delimited, delimiter: ',') %>円(税込価格)</h6>
      </div>
      <%= form_with model: @cart_item, url: cart_items_path, method: :post  do |f| %>

      <%= f.hidden_field :item_id, :value => @item.id %>

      <%= f.select :amount, [["1個", 1], ["2個", 2],  ["3個", 3], ["4個", 4],["5個", 5] ], :prompt => "個数選択", class:"mt-3" %>

      <div>
        <%= f.submit "カートに入れる", class:"btn btn-success mt-3" %>
      </div>
      <% end %>
    </div>
  </div>
</div>

