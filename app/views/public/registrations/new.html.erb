            <th><%= f.label :郵便番号 %></th>
            <th></th>
            <td><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %></td>
          </tr>
          </tr>
            <th><%= f.label :住所 %></th>
            <th></th>
            <td><%= f.text_field :address, autofocus: true, autocomplete: "address" %></td>
          </tr>
        </tbody>
      </table>
      <% end %>
    </div>
  </div>
</div>


<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :名前 %>
    (姓)<%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
    (名)<%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
  </div>

  <div class="field">
    <%= f.label :フリガナ %>
    (セイ)<%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
    (メイ)<%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :郵便番号 %>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
  </div>

  <div class="field">
    <%= f.label :住所 %>
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>

  <div class="field">
    <%= f.label :電話番号 %>
    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
