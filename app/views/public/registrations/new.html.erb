<div class="container">
  <div class="row mt-3 mb-3"> 
    <div class="col-md-2">
      <h3>新規登録</h3>
    </div>
  </div>

  <div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  
  <div class="row">
    <div class="col-lg-3">
      <%= f.label :名前 %>
    </div>
    <div class="col-lg-3">
      <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder: "(姓)" %>
    </div>
    <div class="col-lg-3">
      <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: "(名)" %>
    </div>
  </div>
  
  <div class="row mt-3">
    <div class="col-lg-3">
      <%= f.label :フリガナ %>
    </div>
    <div class="col-lg-3">
     <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", placeholder: "(セイ)" %>
    </div>
    <div class="col-lg-3">
     <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", placeholder: "(メイ)" %>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-lg-3">
     <%= f.label :メールアドレス %>
    </div>
    <div class="col-lg-4">
     <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  </div>
  
  <div class="row mt-3">
    <div class="col-lg-3">
     <%= f.label :郵便番号 %>
    </div>
    <div class="col-lg-4">
     <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-lg-3">
     <%= f.label :住所 %>
    </div>
    <div class="col-lg-4">
     <%= f.text_field :address, autofocus: true, autocomplete: "address", maxlength: "50" %>
    </div>
  </div>
  
  <div class="row mt-3">
    <div class="col-lg-3">
     <%= f.label :電話番号 %>
    </div>
    <div class="col-lg-4">
     <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-lg-3">
     <%= f.label :パスワード %>
     <% if @minimum_password_length %>
     <em>(<%= @minimum_password_length %> 文字以上)</em>
     <% end %>
    </div>
    <div class="col-lg-4">
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-lg-3">
     <%= f.label :パスワード %>
    </div>
    <div class="col-lg-4">
     <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
  </div>
  
  <div class="row mt-3">
    <div class="mx-auto">
     <%= f.submit '新規登録', class:"btn btn-success" %>
    </div>
  </div>
  <% end %>
  </div>

  <div class="row">
    <div class="col-md-10 mx-auto">
      <p>既に登録済の方</p>
    </div>
  </div>

  <div class="row">
    <div class="col-md-5 mx-auto">
      <p><%= link_to "こちら", new_customer_session_path %>からログインしてください。</p>
    </div>
  </div>

</div>


