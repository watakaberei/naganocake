<div class="container">
  <div class="row">
    <div class="col-md-2">
      <h4>新規登録</h4>
    </div>
  </div>
  
  <div calss="row">
    <div class="mx-auto">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
      <table class="table table-borderless">
        <tbody>
          <tr>
            <th><%= f.label :名前 %></th>
            <td>(姓)<%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %></td>
            <td>(名)<%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %></td>
          </tr>
          <tr>
            <th><%= f.label :フリガナ %></th>
            <td>(ｾｲ)<%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %></td>
            <td>(ﾒｲ)<%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %></td>
          </tr>
          <tr>
            <th><%= f.label :メールアドレス %></th>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </tr>
            <th><%= f.label :郵便番号 %></th>
            <td><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %></td>
          </tr>
          </tr>
            <th><%= f.label :住所 %></th>
            <td><%= f.text_field :address, autofocus: true, autocomplete: "address" %></td>
          </tr>
          </tr>
            <th><%= f.label :電話番号 %></th>
            <td><%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %></td>
          </tr>
          </tr>
            <th>
            <%= f.label :パスワード %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上)</em>
            <% end %>
            </th>
            <td>
            <%= f.password_field :password, autocomplete: "new-password" %>
            </td>
          </tr>
          </tr>
            <th><%= f.label :パスワード %></th>
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
          </tr>
          </tr>
          <tr>
            <th></th>
            <td><%= f.submit '新規登録', class:"btn btn-success" %></td>
          </tr>
        </tbody>
      </table>
      <% end %>
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-10 mx-auto">
      <h5>既に登録済の方</h5>
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-5 mx-auto">
      <p><%= link_to "こちら", new_customer_session_path %>からログインしてください。</p>
    </div>
  </div>
  
</div>


