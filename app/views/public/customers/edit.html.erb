<div class="container">
  <div class="row mt-3">
    <div class="col-md-10 col-md-offset-2 mt-4">
      <h4>会員情報編集</h4>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8">
      <table class="table table-borderless">
        <tbody>
          <%= form_with model: @customer,url: customers_my_page_path, method: :patch do |f| %>
          <tr>
            <th>氏名</th>
            <td>
              <%= f.text_field :last_name %>
              <%= f.text_field :first_name %>
            </td>
          </tr>
          <tr>
            <th>フリガナ</th>
            <td>
              <%= f.text_field :last_name_kana %>
              <%= f.text_field :first_name_kana %>
            </td>
          </tr>
          <tr>
            <th>郵便番号</th>
            <td><%= f.text_field :postal_code %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td><%= f.text_field :address %></td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td><%= f.text_field :telephone_number %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td> <%= f.email_field :email, autofocus: true %></td>
          </tr>
          <tr>
            <th></th>
            <td><%= f.submit '編集内容を保存', class:"btn btn-success" %></td>
            <td><%= link_to '退会する', customers_unsubscribe_path, class:"btn btn-danger" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
