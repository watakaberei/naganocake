<div class="container">
  <div class="row">
    <div class="col-md-5">
      <h2>会員情報編集</h2></h2>
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-8">
      <table class="table table-borderless">
        <tbody>
          <%= form_with model: @customer,url: admin_customer_path, method: :patch do |f| %>
          <tr>
            <th>氏名</th>
            <td>
              (姓)<%= f.text_field :last_name %>
              (名)<%= f.text_field :first_name %>
            </td>
          </tr>
          <tr>
            <th>フリガナ</th>
            <td>
              (セイ)<%= f.text_field :last_name_kana %>
              (メイ)<%= f.text_field :first_name_kana %>
            </td>
          </tr>
          <tr>
            <th>郵便番号</th>
            <td><%= f.text_field :postal_code %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td><%= f.text_field :address %></td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td><%= f.text_field :telephone_number %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td> <%= f.email_field :email, autofocus: true %></td>
          </tr>
          <tr>
            <th>会員ステータス</th>
            <td>
              <%= f.radio_button :is_deleted, false %>
              <%= f.label :is_deleted, "有効" %>
              <%= f.radio_button :is_deleted, true %>
              <%= f.label :is_deleted, "退会" %>
            </td>
          </tr>
          <tr>
            <th></th>
            <td><%= f.submit '変更を保存', class:"btn btn-success" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
