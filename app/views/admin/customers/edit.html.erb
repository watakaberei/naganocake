<h1>会員情報編集</h1>

<%= form_with model: @customer,url: admin_customer_path, method: :patch do |f| %>

  <div class="field">
    <p>氏名</p>
    (姓)<%= f.text_field :last_name %>
    (名)<%= f.text_field :first_name %>
  </div>

  <div class="field">
    <p>フリガナ</p>
    (セイ)<%= f.text_field :last_name_kana %>
    (メイ)<%= f.text_field :first_name_kana %>
  </div>

  <div class="field">
    <p>郵便番号</p>
    <%= f.text_field :postal_code %>
  </div>

  <div class="field">
    <p>住所</p>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <p>電話番号</p>
    <%= f.text_field :telephone_number %>
  </div>

  <div class="field">
    <p>メールアドレス</p>
    <%= f.email_field :email, autofocus: true %>
  </div>

  <p>会員ステータス</p>
    <%= f.radio_button :is_deleted, false %>
    <%= f.label :is_deleted, "有効" %>
    <%= f.radio_button :is_deleted, true %>
    <%= f.label :is_deleted, "退会" %>

  <div><%= f.submit '変更を保存' %></div>

<% end %>