<h1>会員ページ</h1>

<% @customers.each do |customer| %>
<p>氏名</p>
    <%= link_to admin_customer_path(customer.id) do %>
    <%= customer.last_name %>
    <%= customer.first_name %>
    <% end %>

<p>メールアドレス</p>
    <%= customer.email %>

<p>ステータス</p>
    <% if customer.is_deleted == false %>
    有効
    <% else %>
    無効
    <% end %>

<% end %>