<div class="container">
  <div class="row mt-3">
    <div class="col-lg-5">
      <h4>注文履歴一覧</h4>
    </div>
  </div>
  
  <div class="row mt-3">
    <div class="col-lg-8 mx-auto">
      <table class="table">
        <thead>
          <tr>
            <th>購入日</th>
            <th>購入者</th>
            <th>注文個数</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td><%= link_to order.created_at.strftime("%Y-%m-%d %H:%M:%S"), admin_order_path(order) %></td>
            <td><%= order.customer.last_name + order.customer.first_name %></td>
            <td><%= order.order_details.pluck(:amount).sum %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
