<div class="container">
  <div class="row">
    <div class="col-md-5">
      <h2>ジャンル編集</h2>
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-6">
      <table class="table">
        <tbody>
          <%= form_with model: @genre,url: admin_genre_path, method: :patch do |f| %>
          <tr>
            <th>ジャンル名</th>
            <td><%= f.text_field :name %></td>
            <td><%= f.submit '変更を保存', class:"btn btn-success" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>



